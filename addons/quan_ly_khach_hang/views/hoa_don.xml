<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Kanban View -->
        <record id="view_hoa_don_kanban" model="ir.ui.view">
            <field name="name">hoa_don.kanban</field>
            <field name="model">hoa_don</field>
            <field name="arch" type="xml">
                <kanban default_group_by="trang_thai" class="o_kanban_small_column">
                    <field name="so_hoa_don"/>
                    <field name="khach_hang_id"/>
                    <field name="tong_thanh_toan"/>
                    <field name="han_thanh_toan"/>
                    <field name="trang_thai"/>
                    <field name="con_no"/>
                    <field name="ngay_xuat"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb-2">
                                    <div>
                                        <strong>
                                            <i class="fa fa-file-text-o" title="Số hóa đơn"/> <field name="so_hoa_don"/>
                                        </strong>
                                        <div>
                                            <field name="khach_hang_id"/>
                                        </div>
                                    </div>
                                    <div>
                                        <span t-if="record.trang_thai.raw_value == 'da_thanh_toan'" class="badge badge-success">Đã thanh toán</span>
                                        <span t-elif="record.trang_thai.raw_value == 'qua_han'" class="badge badge-danger">Quá hạn</span>
                                        <span t-elif="record.trang_thai.raw_value == 'da_xuat'" class="badge badge-warning">Chờ thanh toán</span>
                                        <span t-else="" class="badge badge-secondary">Nháp</span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <div>Tổng thanh toán</div>
                                        <div class="monetary-large">
                                            <field name="tong_thanh_toan" widget="monetary"/>
                                        </div>
                                    </div>
                                    <div t-if="record.con_no.raw_value &gt; 0">
                                        <div>Đang nợ</div>
                                        <div>
                                            <field name="con_no" widget="monetary"/>
                                        </div>
                                    </div>
                                    <div class="progress" t-if="record.tong_thanh_toan.raw_value &gt; 0">
                                        <div class="progress-bar" t-attf-style="width: {{((record.tong_thanh_toan.raw_value - record.con_no.raw_value) / record.tong_thanh_toan.raw_value * 100)}}%;" role="progressbar"/>
                                    </div>
                                    <div>
                                        <span>
                                            Đã thu: {{int((record.tong_thanh_toan.raw_value - record.con_no.raw_value) / record.tong_thanh_toan.raw_value * 100)}}%
                                        </span>
                                        <span t-if="record.con_no.raw_value &gt; 0">
                                            Còn lại: {{int(record.con_no.raw_value / record.tong_thanh_toan.raw_value * 100)}}%
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom mt-3">
                                    <div>
                                        <div>
                                            <i class="fa fa-calendar-o" title="Hạn thanh toán"/>
                                            <span>
                                                <field name="han_thanh_toan" widget="date"/>
                                            </span>
                                        </div>
                                        <div>
                                            <i class="fa fa-clock-o" title="Ngày xuất"/>
                                            <field name="ngay_xuat" widget="date"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_hoa_don_form" model="ir.ui.view">
            <field name="name">hoa_don.form</field>
            <field name="model">hoa_don</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_xuat_hoa_don" string="Xuất hóa đơn" type="object" class="btn-primary" attrs="{'invisible': [('trang_thai', '!=', 'nhap')]}"/>
                        <button name="action_view_thanh_toan" string="Thanh toán" type="object" class="btn-success" attrs="{'invisible': [('trang_thai', 'in', ['nhap', 'huy', 'da_thanh_toan'])]}"/>
                        <button name="action_check_and_clear_debt" string="Kiểm tra thanh toán" type="object" class="btn-info" attrs="{'invisible': [('thanh_toan_ids', '=', []), ('trang_thai', 'not in', ['da_xuat', 'qua_han'])]}" confirm="Bạn có chắc chắn muốn kiểm tra và xóa nợ cho hóa đơn này?"/>
                        <button name="action_huy" string="Hủy" type="object" class="btn-danger" attrs="{'invisible': [('trang_thai', 'not in', ['nhap', 'da_xuat'])]}"/>
                        <field name="trang_thai" widget="statusbar" statusbar_visible="nhap,da_xuat,da_thanh_toan"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <div>Hóa đơn</div>
                            <h1>
                                <field name="so_hoa_don" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Thông tin khách hàng">
                                <field name="khach_hang_id"/>
                                <field name="don_hang_id"/>
                                <field name="hinh_thuc_thanh_toan"/>
                            </group>
                            <group string="Thông tin hóa đơn">
                                <field name="ngay_xuat"/>
                                <field name="han_thanh_toan"/>
                                <field name="don_vi_tien"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Chi tiết hóa đơn">
                                <field name="hoa_don_chi_tiet_ids">
                                    <tree editable="bottom">
                                        <field name="ten_san_pham"/>
                                        <field name="mo_ta"/>
                                        <field name="so_luong"/>
                                        <field name="don_vi_tinh"/>
                                        <field name="don_gia"/>
                                        <field name="thanh_tien" sum="Tổng"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <div>
                                        <span>Tổng giá trị:</span>
                                        <field name="tong_gia_tri" widget="monetary"/>
                                    </div>
                                    <div>
                                        <span>Thuế VAT (<field name="thue_vat"/>%):</span>
                                        <field name="tien_thue" widget="monetary"/>
                                    </div>
                                    <div>
                                        <span>Tổng thanh toán:</span>
                                        <field name="tong_thanh_toan" widget="monetary"/>
                                    </div>
                                </group>
                            </page>
                            <page string="Thanh toán">
                                <group>
                                    <group>
                                        <field name="tong_da_thanh_toan" widget="monetary"/>
                                        <field name="con_no" widget="monetary"/>
                                    </group>
                                </group>
                                <field name="thanh_toan_ids">
                                    <tree>
                                        <field name="ma_thanh_toan"/>
                                        <field name="ngay_thanh_toan"/>
                                        <field name="so_tien"/>
                                        <field name="hinh_thuc"/>
                                        <field name="trang_thai" widget="badge"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="File đính kèm">
                                <group>
                                    <field name="file_hoa_don" filename="file_hoa_don_name"/>
                                    <field name="file_hoa_don_name" invisible="1"/>
                                </group>
                            </page>
                            <page string="Ghi chú">
                                <field name="ghi_chu" placeholder="Ghi chú hóa đơn..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_hoa_don_tree" model="ir.ui.view">
            <field name="name">hoa_don.tree</field>
            <field name="model">hoa_don</field>
            <field name="arch" type="xml">
                <tree decoration-info="trang_thai == 'nhap'" decoration-warning="trang_thai == 'da_xuat'" decoration-success="trang_thai == 'da_thanh_toan'" decoration-danger="trang_thai == 'qua_han'">
                    <field name="so_hoa_don"/>
                    <field name="khach_hang_id"/>
                    <field name="ngay_xuat"/>
                    <field name="han_thanh_toan"/>
                    <field name="tong_thanh_toan" sum="Tổng"/>
                    <field name="con_no" sum="Tổng nợ"/>
                    <field name="trang_thai" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_hoa_don_search" model="ir.ui.view">
            <field name="name">hoa_don.search</field>
            <field name="model">hoa_don</field>
            <field name="arch" type="xml">
                <search>
                    <field name="so_hoa_don" string="Số hóa đơn" filter_domain="['|', ('so_hoa_don', 'ilike', self), ('don_hang_id', 'ilike', self)]"/>
                    <field name="khach_hang_id"/>
                    <field name="don_hang_id"/>
                    <separator/>
                    <filter string="Nháp" name="nhap" domain="[('trang_thai', '=', 'nhap')]"/>
                    <filter string="Đã xuất" name="da_xuat" domain="[('trang_thai', '=', 'da_xuat')]"/>
                    <filter string="Đã thanh toán" name="da_thanh_toan" domain="[('trang_thai', '=', 'da_thanh_toan')]"/>
                    <filter string="Quá hạn" name="qua_han" domain="[('trang_thai', '=', 'qua_han')]"/>
                    <separator/>
                    <filter string="Còn nợ" name="con_no" domain="[('con_no', '>', 0)]"/>
                    <filter string="Chờ thanh toán" name="cho_thanh_toan" domain="[('trang_thai', '=', 'da_xuat'), ('con_no', '>', 0)]"/>
                    <filter string="Hạn thanh toán hôm nay" name="due_today" domain="[('han_thanh_toan', '=', context_today().strftime('%Y-%m-%d')), ('trang_thai', '!=', 'da_thanh_toan')]"/>
                    <filter string="Hạn tuần này" name="due_this_week" domain="[('han_thanh_toan', '>=', (context_today() - relativedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('han_thanh_toan', '&lt;=', (context_today() + relativedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d')), ('trang_thai', '!=', 'da_thanh_toan')]"/>
                    <separator/>
                    <filter string="Giá trị cao (≥30tr)" name="high_value" domain="[('tong_thanh_toan', '>=', 30000000)]"/>
                    <filter string="Xuất tháng này" name="this_month" domain="[('ngay_xuat', '>=', time.strftime('%Y-%m-01')), ('ngay_xuat', '&lt;=', (datetime.date.today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Khách hàng" name="group_khach_hang" context="{'group_by': 'khach_hang_id'}"/>
                        <filter string="Trạng thái" name="group_trang_thai" context="{'group_by': 'trang_thai'}"/>
                        <filter string="Hình thức thanh toán" name="group_hinh_thuc" context="{'group_by': 'hinh_thuc_thanh_toan'}"/>
                        <filter string="Ngày xuất" name="group_ngay_xuat" context="{'group_by': 'ngay_xuat'}"/>
                        <filter string="Hạn thanh toán" name="group_han" context="{'group_by': 'han_thanh_toan'}"/>
                        <filter string="Tháng xuất" name="group_month" context="{'group_by': 'ngay_xuat:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_hoa_don" model="ir.actions.act_window">
            <field name="name">Hóa đơn</field>
            <field name="res_model">hoa_don</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hoa_don_search"/>
        </record>
    </data>
</odoo>
