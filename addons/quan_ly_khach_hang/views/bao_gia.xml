<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_bao_gia_form" model="ir.ui.view">
            <field name="name">bao_gia.form</field>
            <field name="model">bao_gia</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_send_to_customer" string="Gửi khách" type="object" 
                            attrs="{'invisible': ['|', ('id', '=', False), ('trang_thai', '!=', 'nhap')]}" class="oe_highlight"/>
                        <button name="action_extract_and_summarize" string="Trích xuất &amp; Tóm tắt" type="object"
                            class="btn-primary" icon="fa-magic"
                            attrs="{'invisible': [('file_bao_gia', '=', False)]}"
                            help="Trích xuất nội dung và tóm tắt từ file báo giá"/>
                        <button name="action_customer_approve" string="Khách đồng ý" type="object" 
                            attrs="{'invisible': ['|', ('id', '=', False), ('trang_thai', '!=', 'gui_khach')]}" class="oe_highlight"/>
                        <button name="action_customer_reject" string="Khách từ chối" type="object" 
                            attrs="{'invisible': ['|', ('id', '=', False), ('trang_thai', '!=', 'gui_khach')]}" class="btn-danger"/>
                        <field name="trang_thai" widget="statusbar" statusbar_visible="nhap,gui_khach,khach_dong_y,khach_tu_choi,het_han" attrs="{'readonly': [('id', '=', False)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="ten_bao_gia" placeholder="Tên báo giá"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Thông tin báo giá">
                                <field name="ma_bao_gia"/>
                                <field name="khach_hang_id"/>
                                <field name="co_hoi_id"/>
                                <field name="nhan_vien_lap_id"/>
                                <field name="hop_dong_id" invisible="1"/>
                            </group>
                            <group string="Thời hạn và giá trị">
                                <field name="ngay_tao"/>
                                <field name="ngay_hieu_luc"/>
                                <field name="tong_gia_tri"/>
                                <field name="don_vi_tien"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Nội dung" name="noi_dung">
                                <field name="noi_dung"/>
                            </page>
                            <page string="File đính kèm" name="file">
                                <group>
                                    <field name="file_bao_gia" filename="file_bao_gia_name"/>
                                    <field name="file_bao_gia_name" invisible="1"/>
                                </group>
                            </page>
                            <page string="Ghi chú" name="ghi_chu">
                                <field name="ghi_chu"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_bao_gia_tree" model="ir.ui.view">
            <field name="name">bao_gia.tree</field>
            <field name="model">bao_gia</field>
            <field name="arch" type="xml">
                <tree decoration-success="trang_thai == 'khach_dong_y'" decoration-danger="trang_thai == 'khach_tu_choi'">
                    <field name="ma_bao_gia"/>
                    <field name="ten_bao_gia"/>
                    <field name="khach_hang_id"/>
                    <field name="ngay_tao"/>
                    <field name="ngay_hieu_luc"/>
                    <field name="tong_gia_tri"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_bao_gia_search" model="ir.ui.view">
            <field name="name">bao_gia.search</field>
            <field name="model">bao_gia</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_bao_gia"/>
                    <field name="ten_bao_gia"/>
                    <field name="khach_hang_id"/>
                    <field name="nhan_vien_lap_id"/>
                    <filter string="Đã gửi khách" name="gui_khach" domain="[('trang_thai', '=', 'gui_khach')]"/>
                    <filter string="Khách đồng ý" name="dong_y" domain="[('trang_thai', '=', 'khach_dong_y')]"/>
                    <group expand="0" string="Nhóm theo">
                        <filter string="Khách hàng" name="group_kh" context="{'group_by': 'khach_hang_id'}"/>
                        <filter string="Trạng thái" name="group_tt" context="{'group_by': 'trang_thai'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_bao_gia" model="ir.actions.act_window">
            <field name="name">Báo giá</field>
            <field name="res_model">bao_gia</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_bao_gia_search"/>
        </record>
    </data>
</odoo>
