<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ==================== PHÊ DUYỆT VĂN BẢN ĐẾN ==================== -->
        
        <!-- Form View Duyệt Văn bản đến -->
        <record id="view_van_ban_den_approval_form" model="ir.ui.view">
            <field name="name">van_ban_den.approval.form</field>
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <form string="Phê duyệt văn bản đến">
                    <header>
                        <button name="action_phe_duyet_van_ban_den" string="Phê duyệt" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('trang_thai', 'in', ['dang_xu_ly', 'huy'])]}"/>
                        <button name="action_tu_choi_van_ban_den" string="Từ chối" type="object" 
                            class="btn-danger" attrs="{'invisible': [('trang_thai', 'in', ['dang_xu_ly', 'huy'])]}"/>
                        <field name="trang_thai" widget="statusbar" statusbar_visible="moi,dang_xu_ly"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="so_ky_hieu" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Thông tin văn bản">
                                <field name="loai_van_ban_id" readonly="1"/>
                                <field name="ngay_van_ban" readonly="1"/>
                                <field name="ngay_den" readonly="1"/>
                                <field name="noi_ban_hanh" readonly="1"/>
                                <field name="nguoi_ky" readonly="1"/>
                                <field name="khach_hang_id" readonly="1"/>
                            </group>
                            <group string="Mức độ ưu tiên">
                                <field name="do_khan" readonly="1"/>
                                <field name="do_mat" readonly="1"/>
                            </group>
                        </group>
                        <group string="Nội dung">
                            <field name="trich_yeu" readonly="1" nolabel="1"/>
                        </group>
                        <group string="Phân công xử lý">
                            <field name="nguoi_xu_ly_id" attrs="{'readonly': [('trang_thai', 'in', ['dang_xu_ly', 'huy'])]}"/>
                            <field name="han_xu_ly" attrs="{'readonly': [('trang_thai', 'in', ['dang_xu_ly', 'huy'])]}"/>
                            <field name="ghi_chu" placeholder="Ghi chú duyệt..."/>
                        </group>
                        <group string="Tệp đính kèm">
                            <field name="file_dinh_kem" filename="ten_file" readonly="1"/>
                            <field name="ten_file" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View Duyệt Văn bản đến -->
        <record id="view_van_ban_den_approval_tree" model="ir.ui.view">
            <field name="name">van_ban_den.approval.tree</field>
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <tree string="Văn bản đến cần duyệt" decoration-danger="do_khan in ['khan', 'hoa_toc', 'thuong_khat']" decoration-info="trang_thai == 'moi'">
                    <field name="so_ky_hieu"/>
                    <field name="ngay_den"/>
                    <field name="noi_ban_hanh"/>
                    <field name="khach_hang_id"/>
                    <field name="trich_yeu"/>
                    <field name="do_khan"/>
                    <field name="han_xu_ly"/>
                    <field name="nguoi_xu_ly_id"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <!-- Action Duyệt Văn bản đến -->
        <record id="action_approval_van_ban_den" model="ir.actions.act_window">
            <field name="name">Duyệt văn bản đến</field>
            <field name="res_model">van_ban_den</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_van_ban_den_approval_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_van_ban_den_approval_form')})]"/>
            <field name="domain">[('trang_thai', '=', 'moi')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Không có văn bản đến cần duyệt
                </p>
                <p>
                    Các văn bản đến ở trạng thái "Mới" và "Đang xử lý" sẽ hiển thị ở đây để phê duyệt và theo dõi.
                </p>
            </field>
        </record>

        <!-- ==================== PHÊ DUYỆT VĂN BẢN ĐI ==================== -->
        
        <!-- Form View Duyệt Văn bản đi -->
        <record id="view_van_ban_di_approval_form" model="ir.ui.view">
            <field name="name">van_ban_di.approval.form</field>
            <field name="model">van_ban_di</field>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <form string="Phê duyệt văn bản đi">
                    <header>
                        <button name="action_phe_duyet_van_ban_di" string="Phê duyệt và gửi đi" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('trang_thai', 'not in', ['du_thao', 'cho_duyet'])]}"/>
                        <button name="action_tu_choi_van_ban_di" string="Từ chối" type="object" 
                            class="btn-danger" attrs="{'invisible': [('trang_thai', 'not in', ['du_thao', 'cho_duyet'])]}"/>
                        <button name="action_gui_van_ban" string="Đã gửi" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('trang_thai', '!=', 'da_duyet')]}"/>
                        <field name="trang_thai" widget="statusbar" statusbar_visible="du_thao,cho_duyet,da_duyet,da_gui"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="so_ky_hieu" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Thông tin văn bản">
                                <field name="loai_van_ban_id" readonly="1"/>
                                <field name="ngay_van_ban" readonly="1"/>
                                <field name="noi_nhan" readonly="1"/>
                                <field name="khach_hang_id" readonly="1"/>
                                <field name="nguoi_ky" readonly="1"/>
                                <field name="nguoi_soan_thao_id" readonly="1"/>
                            </group>
                            <group string="Mức độ ưu tiên">
                                <field name="do_khan" readonly="1"/>
                                <field name="do_mat" readonly="1"/>
                                <field name="hop_dong_id" readonly="1"/>
                                <field name="van_ban_den_id" readonly="1"/>
                                <field name="co_hoi_id" readonly="1"/>
                            </group>
                        </group>
                        <group string="Nội dung">
                            <field name="trich_yeu" readonly="1" nolabel="1"/>
                        </group>
                        <group string="Phê duyệt">
                            <group>
                                <field name="approver_tp_id"/>
                                <field name="tp_da_duyet" readonly="1"/>
                                <field name="tp_ngay_duyet" readonly="1"/>
                            </group>
                            <group>
                                <field name="approver_gd_id"/>
                                <field name="gd_da_duyet" readonly="1"/>
                                <field name="gd_ngay_duyet" readonly="1"/>
                            </group>
                        </group>
                        <group string="Chữ ký điện tử">
                            <field name="xac_nhan_chu_ky" string="Xác nhận ký điện tử" 
                                help="Tích vào đây để xác nhận bạn đồng ý phê duyệt văn bản này bằng chữ ký điện tử"/>
                        </group>
                        <group string="Chữ ký đã lưu">
                            <field name="chu_ky_luu_id"/>
                        </group>
                        <group string="Ghi chú duyệt">
                            <field name="ghi_chu" placeholder="Nhập ghi chú phê duyệt..."/>
                        </group>
                        <group string="Tệp đính kèm">
                            <field name="file_dinh_kem" filename="ten_file" readonly="1"/>
                            <field name="ten_file" invisible="1"/>
                        </group>
                        <group string="Lịch sử duyệt">
                            <field name="approval_log_ids" nolabel="1" readonly="1">
                                <tree string="Lịch sử duyệt">
                                    <field name="role"/>
                                    <field name="action"/>
                                    <field name="nguoi_duyet_id"/>
                                    <field name="user_id"/>
                                    <field name="ngay_duyet"/>
                                    <field name="ghi_chu"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Form sạch tối giản để tránh modifiers lỗi -->
        <record id="view_van_ban_di_approval_form_clean" model="ir.ui.view">
            <field name="name">van_ban_di.approval.form.clean</field>
            <field name="model">van_ban_di</field>
            <field name="priority" eval="1000"/>
            <field name="arch" type="xml">
                <form string="Phê duyệt văn bản đi">
                    <header>
                        <button name="action_phe_duyet_van_ban_di" string="Phê duyệt và gửi đi" type="object"
                            class="oe_highlight" attrs="{'invisible': [('trang_thai', 'not in', ['du_thao', 'cho_duyet'])]}"/>
                        <button name="action_gui_van_ban" string="Đã gửi" type="object"
                            class="oe_highlight" attrs="{'invisible': [('trang_thai', '!=', 'da_duyet')]}"/>
                        <field name="trang_thai" widget="statusbar" statusbar_visible="du_thao,cho_duyet,da_duyet,da_gui"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="Thông tin văn bản">
                                <field name="so_ky_hieu" readonly="1"/>
                                <field name="loai_van_ban_id" readonly="1"/>
                                <field name="ngay_van_ban" readonly="1"/>
                                <field name="noi_nhan" readonly="1"/>
                                <field name="khach_hang_id" readonly="1"/>
                                <field name="nguoi_ky" readonly="1"/>
                                <field name="nguoi_soan_thao_id" readonly="1"/>
                                <field name="do_khan" readonly="1"/>
                                <field name="do_mat" readonly="1"/>
                                <field name="hop_dong_id" readonly="1"/>
                                <field name="van_ban_den_id" readonly="1"/>
                                <field name="co_hoi_id" readonly="1"/>
                            </group>
                            <group string="Nội dung">
                                <field name="trich_yeu" readonly="1" nolabel="1"/>
                                <field name="ghi_chu" readonly="1"/>
                            </group>
                        </group>
                        <group string="Phê duyệt">
                            <group>
                                <field name="approver_tp_id"/>
                                <field name="tp_da_duyet"/>
                                <field name="tp_ngay_duyet"/>
                            </group>
                            <group>
                                <field name="approver_gd_id"/>
                                <field name="gd_da_duyet"/>
                                <field name="gd_ngay_duyet"/>
                            </group>
                        </group>
                        <group string="Chữ ký">
                            <field name="chu_ky_luu_id"/>
                            <field name="xac_nhan_chu_ky"/>
                        </group>
                        <group string="Tệp đính kèm">
                            <field name="file_dinh_kem" filename="ten_file"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Force clean attrs on header buttons in case other inherited views inject bad modifiers -->
        <record id="view_van_ban_di_approval_form_fix_attrs" model="ir.ui.view">
            <field name="name">van_ban_di.approval.form.fix.attrs</field>
            <field name="model">van_ban_di</field>
            <field name="inherit_id" ref="view_van_ban_di_approval_form"/>
            <field name="priority" eval="500"/>
            <field name="arch" type="xml">
                <header position="replace">
                    <header>
                        <field name="trang_thai" widget="statusbar" statusbar_visible="du_thao,cho_duyet,da_duyet,da_gui"/>
                    </header>
                </header>
            </field>
        </record>

        <!-- Minimal sheet to eliminate bad modifiers injected elsewhere -->
        <record id="view_van_ban_di_approval_form_fix_sheet" model="ir.ui.view">
            <field name="name">van_ban_di.approval.form.fix.sheet</field>
            <field name="model">van_ban_di</field>
            <field name="inherit_id" ref="view_van_ban_di_approval_form"/>
            <field name="priority" eval="600"/>
            <field name="arch" type="xml">
                <sheet position="replace">
                    <sheet>
                        <group>
                            <group string="Thông tin văn bản">
                                <field name="so_ky_hieu" readonly="1"/>
                                <field name="loai_van_ban_id" readonly="1"/>
                                <field name="ngay_van_ban" readonly="1"/>
                                <field name="noi_nhan" readonly="1"/>
                                <field name="khach_hang_id" readonly="1"/>
                                <field name="nguoi_ky" readonly="1"/>
                                <field name="nguoi_soan_thao_id" readonly="1"/>
                                <field name="do_khan" readonly="1"/>
                                <field name="do_mat" readonly="1"/>
                                <field name="hop_dong_id" readonly="1"/>
                                <field name="van_ban_den_id" readonly="1"/>
                            </group>
                            <group string="Nội dung">
                                <field name="trich_yeu" readonly="1" nolabel="1"/>
                                <field name="ghi_chu" readonly="1"/>
                            </group>
                        </group>
                        <group string="Phê duyệt">
                            <group>
                                <field name="approver_tp_id" readonly="1"/>
                                <field name="tp_da_duyet" readonly="1"/>
                                <field name="tp_ngay_duyet" readonly="1"/>
                            </group>
                            <group>
                                <field name="approver_gd_id" readonly="1"/>
                                <field name="gd_da_duyet" readonly="1"/>
                                <field name="gd_ngay_duyet" readonly="1"/>
                            </group>
                        </group>
                        <group string="Chữ ký">
                            <field name="chu_ky_luu_id"/>
                            <field name="xac_nhan_chu_ky"/>
                        </group>
                        <group string="Tệp đính kèm">
                            <field name="file_dinh_kem" filename="ten_file" readonly="1"/>
                        </group>
                        <group string="Lịch sử duyệt">
                            <field name="approval_log_ids" nolabel="1" readonly="1">
                                <tree>
                                    <field name="role"/>
                                    <field name="action"/>
                                    <field name="nguoi_duyet_id"/>
                                    <field name="user_id"/>
                                    <field name="ngay_duyet"/>
                                    <field name="ghi_chu"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </sheet>
            </field>
        </record>

        <!-- Tree View Duyệt Văn bản đi -->
        <record id="view_van_ban_di_approval_tree" model="ir.ui.view">
            <field name="name">van_ban_di.approval.tree</field>
            <field name="model">van_ban_di</field>
            <field name="arch" type="xml">
                <tree string="Văn bản đi cần duyệt" decoration-danger="do_khan in ['khan', 'hoa_toc', 'thuong_khat']" decoration-warning="trang_thai == 'du_thao'" decoration-info="trang_thai == 'cho_duyet'">
                    <field name="so_ky_hieu"/>
                    <field name="ngay_van_ban"/>
                    <field name="noi_nhan"/>
                    <field name="khach_hang_id"/>
                    <field name="trich_yeu"/>
                    <field name="do_khan"/>
                    <field name="nguoi_soan_thao_id"/>
                    <field name="trang_thai"/>
                    <field name="tp_da_duyet"/>
                    <field name="gd_da_duyet"/>
                </tree>
            </field>
        </record>

        <!-- Action Duyệt Văn bản đi (sạch) -->
        <record id="action_approval_van_ban_di_clean" model="ir.actions.act_window">
            <field name="name">Duyệt văn bản đi</field>
            <field name="res_model">van_ban_di</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_van_ban_di_approval_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_van_ban_di_approval_form_clean')})]"/>
            <field name="domain">[('trang_thai', 'in', ['du_thao', 'cho_duyet'])]</field>
            <field name="context">{'search_default_cho_duyet': 1, 'hide_approval_log': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Không có văn bản đi cần duyệt
                </p>
                <p>
                    Tất cả văn bản đi chờ duyệt sẽ hiển thị ở đây. Cần có chữ ký điện tử để phê duyệt.
                </p>
            </field>
        </record>
    </data>
</odoo>
