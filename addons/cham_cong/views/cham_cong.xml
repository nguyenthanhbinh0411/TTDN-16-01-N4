<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action -->
    <record id="action_cham_cong" model="ir.actions.act_window">
        <field name="name">Chấm công</field>
        <field name="res_model">cham_cong</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo bản ghi chấm công mới
            </p>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_cham_cong_tree" model="ir.ui.view">
        <field name="name">cham_cong.tree</field>
        <field name="model">cham_cong</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ngay"/>
                <field name="nhan_vien_id"/>
                <field name="thoi_gian_check_in"/>
                <field name="thoi_gian_check_out"/>
                <field name="gio_lam_viec"/>
                <field name="luong_co_ban"/>
                <field name="so_ngay_cham_cong"/>
                <field name="luong_thuc_te"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_cham_cong_form" model="ir.ui.view">
        <field name="name">cham_cong.form</field>
        <field name="model">cham_cong</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="nhan_vien_id"/>
                            <field name="ngay"/>
                        </group>
                        <group>
                            <field name="thoi_gian_check_in"/>
                            <field name="thoi_gian_check_out"/>
                            <field name="gio_lam_viec"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ghi chú">
                            <field name="ghi_chu"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
